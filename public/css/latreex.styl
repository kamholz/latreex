@import 'reset.css'
@import 'jquery-ui.min.css'

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

opacity(n)
  opacity n
  filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

transform-scale(n)
  -ms-transform scale(n,n)
  -webkit-transform scale(n,n)
  -ms-transform-origin 0
  -webkit-transform-origin 0 0
  transform scale(n,n)

body
  font-size 13pt
  font-family sans-serif
  padding 30px
  color #660000

h1
  margin-bottom 1.5em
  font-weight bold
  font-size 120%

em
  font-style italic

b
  font-weight bold

code
  font-family monospace

input[type='checkbox']
  vertical-align middle
  margin-right 1ex

label
  vertical-align middle

textarea
  font-family monospace
  margin-top 1em

.clearfix
  clear both

.left
  float left

.right
  float right

.tooltip
  margin-left 5px
  &:hover
    cursor pointer

.ui-tooltip
  max-width 400px
  background-color lightgray

.ui-tooltip-content
  font-size 90%

.rowform
  ul
    display inline-block
    margin-right 1.5em
  li
    margin-bottom .2em
  label
    margin-right 0.5ex
  label.wide
    width 14em
  input[type='radio']
    margin-right 1ex
  button
    margin-bottom 1em
  .checkbox
    margin-top 1ex
    margin-bottom 1ex

#space
  margin-bottom 1.5em
  label
    display inline-block
    text-align right
    margin-right 1ex

#style
  max-width 9em

#font
  max-width 11em

#fontopt div
  margin-top 1ex
  display none

#fontoptToggle
  margin-bottom 0
  a
    text-decoration none

#fontselect
  margin-bottom 1em

#buttons
  margin-top 0.75em
  button
    margin 0 1em

#previewimage
  margin-top 1em
  text-align center
  img
    max-width 100%

#copyarea
  position fixed
  top -1000px
  left -1000px
