@import 'reset.css'

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

opacity(n)
  opacity n
  filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

transform-scale(n)
  -ms-transform scale(n,n)
  -webkit-transform scale(n,n)
  -ms-transform-origin 0
  -webkit-transform-origin 0 0
  transform scale(n,n)

body
  font-size 13pt
  font-family sans-serif
  padding 30px
  color #660000

h1
  margin-bottom 1.5em
  font-weight bold
  font-size 120%

i
  font-style italic

.clearfix
  clear both

.left
  float left

.right
  float right

.tooltip
  margin-left 1ex
  position relative
  top 2px
  &:hover
    cursor pointer

#tooltip {
	position absolute
	z-index 9999
	border-radius(8px)
	background-color #555
	color lightgreen
	padding 10px
	font-size 85%
	line-height 1.25
}

.rowform
  ul
    display inline-block
    margin-right 1.5em
  li
    margin-bottom .2em
  ul.select select
    margin-bottom: 1em
  label
    display inline-block
    text-align right
    margin-right 1ex
  label.wide
    width 14em
  input[type='radio']
    margin-right 1ex
  button
    margin-bottom 1em

textarea
  font-family monospace
  margin-top 1em

#space
  margin-bottom 1.5em

#buttons
  margin-top 1.5em
  button
    margin 0 1em

#previewImage
  margin-top 1em
  text-align center
  img
    max-width 100%
    transform-scale(0.65)

#fontopt, #greek
  display none
