@import 'reset.css'
@import 'jquery-ui.min.css'

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

opacity(n)
  opacity n
  filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

transform-scale(n)
  -ms-transform scale(n,n)
  -webkit-transform scale(n,n)
  -ms-transform-origin 0
  -webkit-transform-origin 0 0
  transform scale(n,n)

body
  font-size 13pt
  font-family Helvetica, Arial, sans-serif
  padding 30px
  color black

a, .dialog a
  text-decoration none
  color #0000EE
  &:hover
    color #0000EE
  &:visited
    color #551A8B

h1
  margin-bottom 1em
  font-weight bold
  font-size 120%

em
  font-style italic

b
  font-weight bold

code
  font-family monospace

input[type='checkbox'], input[type='radio']
  vertical-align middle

label
  vertical-align middle

textarea
  font-family monospace
  margin-top 1em

.clearfix
  clear both

.dialog
  display none
  font-size 85%

.hidden
  visibility hidden

.left
  float left

.right
  float right

.tooltip
  position relative
  top 1px
  margin-left 5px
  &:hover
    cursor pointer

.ui-tooltip
  max-width 400px
  background-color lightgray

.ui-tooltip-content
  font-size 90%

.rowform
  ul
    display inline-block
    margin-right 1.5em
  li
    margin-bottom .2em
  label
    margin-right 0.5ex
    span
      vertical-align middle
  li.checkbox label
    margin-right 1.25ex

#spacing, #direction
  text-align right
  width 20em
  input[type='checkbox'], input[type='radio']
    margin 0 0 0 1.25ex

#style, #font
  width 12em
  input[type='checkbox'], input[type='radio']
    margin 0 1.25ex 0 0

#spacing
  margin-bottom 1em
  .heading
    text-align right
  .wide
    width 12em
  label
    display inline-block
    text-align right
    margin-right 1ex

#font
  max-width 11.5em

#fontopt
  ul
    margin-bottom 1.25ex
  div
    margin-top 1ex
    display none

#fontoptToggle
  margin-bottom 0

#fontselect
  margin-bottom 1em

#buttons
  margin-top 0.5ex
  button
    margin 0 1em

#previewimage
  margin-top 1em
  text-align center
  img
    max-width 100%

#pastetreeDialog
  textarea
    font-family monospace
    font-size 85%
    width 95%

#multitreeDialog
  label
    display block
    margin 1ex 0
    span
      display inline-block
      text-align right
      width 12em
  input
    margin 0 1ex
  .error
    display none
    margin-top 1em
    color red
    text-align center

#copyarea
  position fixed
  top -1000px
  left -1000px
